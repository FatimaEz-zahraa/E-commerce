@page
@model E_commerce.Pages.Cart.IndexModel
@using System.Globalization

@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container py-5">
    <!-- Titre et messages -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
            <i class="fas fa-shopping-cart text-primary me-2"></i>
            Mon Panier
            @if (Model.Cart.Items.Any())
            {
                <span class="badge bg-primary rounded-pill ms-2">@Model.Cart.TotalItems</span>
            }
        </h1>
        @if (Model.Cart.Items.Any())
        {
            <form method="post" asp-page-handler="Clear" class="mb-0">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-trash-alt me-1"></i>
                    Vider le panier
                </button>
            </form>
        }
    </div>

    <!-- Messages d'alerte -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Panier vide -->
    @if (!Model.Cart.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart fa-4x text-muted"></i>
            </div>
            <h3 class="h4 mb-3">Votre panier est vide</h3>
            <p class="text-muted mb-4">Ajoutez des produits pour commencer vos achats</p>
            <a asp-page="/Products/Index" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>
                Découvrir nos produits
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Liste des produits -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            @Model.Cart.TotalItems article@(Model.Cart.TotalItems > 1 ? "s" : "")
                            <span class="text-muted ms-2">(@Model.Cart.Items.Count produit@(Model.Cart.Items.Count > 1 ? "s" : ""))</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" class="border-0 ps-4">Produit</th>
                                        <th scope="col" class="border-0 text-center">Prix</th>
                                        <th scope="col" class="border-0 text-center">Quantité</th>
                                        <th scope="col" class="border-0 text-center">Total</th>
                                        <th scope="col" class="border-0 text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cart.Items)
                                    {
                                        <tr>
                                            <!-- Produit -->
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3" style="width: 80px;">
                                                        <img src="@(item.ImageUrl ?? "/images/default-product.jpg")"
                                                             alt="@item.ProductName"
                                                             class="img-fluid rounded"
                                                             style="height: 80px; object-fit: cover;">
                                                    </div>
                                                    <div>
                                                        <a asp-page="/Products/Details" asp-route-id="@item.ProductId"
                                                           class="text-decoration-none text-dark fw-bold">
                                                            @item.ProductName
                                                        </a>
                                                        @if (!string.IsNullOrEmpty(item.Brand))
                                                        {
                                                            <div class="text-muted small">@item.Brand</div>
                                                        }
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Prix unitaire -->
                                            <td class="text-center align-middle">
                                                <span class="fw-bold">@item.Price.ToString("C", CultureInfo.CurrentCulture)</span>
                                            </td>

                                            <!-- Quantité avec spinner -->
                                            <td class="text-center align-middle">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <form method="post" asp-page-handler="UpdateQuantity" class="d-flex">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                                        <div class="input-group input-group-sm" style="width: 130px;">
                                                            <button class="btn btn-outline-secondary"
                                                                    type="submit"
                                                                    name="quantity"
                                                                    value="@(item.Quantity - 1)"
                                                                    @(item.Quantity <= 1 ? "disabled" : "")>
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input type="text"
                                                                   class="form-control text-center border-secondary"
                                                                   value="@item.Quantity"
                                                                   readonly
                                                                   style="background-color: #f8f9fa;">
                                                            <button class="btn btn-outline-secondary"
                                                                    type="submit"
                                                                    name="quantity"
                                                                    value="@(item.Quantity + 1)"
                                                                    @(item.Quantity >= item.MaxQuantity ? "disabled" : "")>
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                                @if (item.Quantity >= item.MaxQuantity)
                                                {
                                                    <small class="text-danger">Quantité maximale</small>
                                                }
                                            </td>

                                            <!-- Total -->
                                            <td class="text-center align-middle">
                                                <span class="fw-bold text-primary">
                                                    @item.TotalPrice.ToString("C", CultureInfo.CurrentCulture)
                                                </span>
                                            </td>

                                            <!-- Actions -->
                                            <td class="text-end pe-4 align-middle">
                                                <form method="post" asp-page-handler="Remove" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit"
                                                            class="btn btn-outline-danger btn-sm"
                                                            title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Continuer les achats -->
                <div class="d-flex justify-content-between">
                    <a asp-page="/Products/Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Continuer mes achats
                    </a>
                </div>
            </div>

            <!-- Récapitulatif de commande -->
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-receipt text-primary me-2"></i>
                            Récapitulatif
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Sous-total -->
                        <div class="d-flex justify-content-between mb-2">
                            <span>Sous-total (@Model.Cart.TotalItems article@(Model.Cart.TotalItems > 1 ? "s" : ""))</span>
                            <span class="fw-bold">@Model.Cart.Subtotal.ToString("C", CultureInfo.CurrentCulture)</span>
                        </div>

                        <!-- Livraison -->
                        <div class="d-flex justify-content-between mb-2">
                            <span>Livraison</span>
                            @if (Model.Cart.ShippingCost > 0)
                            {
                                <span class="fw-bold">@Model.Cart.ShippingCost.ToString("C", CultureInfo.CurrentCulture)</span>
                            }
                            else
                            {
                                <span class="text-success fw-bold">Gratuite</span>
                            }
                        </div>

                        <!-- Taxes -->
                        <div class="d-flex justify-content-between mb-3">
                            <span>TVA (20%)</span>
                            <span class="fw-bold">@Model.Cart.Tax.ToString("C", CultureInfo.CurrentCulture)</span>
                        </div>

                        <!-- Séparateur -->
                        <hr class="my-3">

                        <!-- Total -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0">Total</h5>
                            <h4 class="text-primary mb-0">@Model.Cart.Total.ToString("C", CultureInfo.CurrentCulture)</h4>
                        </div>

                        <!-- Bouton commander -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-page="/Checkout/Index" class="btn btn-success btn-lg w-100 mb-3">
                                <i class="fas fa-lock me-2"></i>
                                Passer la commande
                            </a>
                        }
                        else
                        {
                            <div class="mb-3">
                                <a asp-page="/Checkout/Index" class="btn btn-success btn-lg w-100 mb-2">
                                    <i class="fas fa-lock me-2"></i>
                                    Commander maintenant
                                </a>
                                <small class="text-muted">
                                    Vous pourrez vous connecter ou créer un compte lors de la commande
                                </small>
                            </div>
                        }

                        <!-- Paiement sécurisé -->
                        <div class="text-center mt-4">
                            <p class="small text-muted mb-2">Paiement sécurisé</p>
                            <div class="d-flex justify-content-center gap-2">
                                <i class="fab fa-cc-visa fa-2x text-muted"></i>
                                <i class="fab fa-cc-mastercard fa-2x text-muted"></i>
                                <i class="fab fa-cc-paypal fa-2x text-muted"></i>
                                <i class="fab fa-cc-apple-pay fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Confirmation pour vider le panier
            const clearCartForm = document.querySelector('form[asp-page-handler="Clear"]');
            if (clearCartForm) {
                clearCartForm.addEventListener('submit', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir vider votre panier ?')) {
                        e.preventDefault();
                    }
                });
            }

            // Confirmation pour supprimer un article
            const removeButtons = document.querySelectorAll('form[asp-page-handler="Remove"] button');
            removeButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    if (confirm('Supprimer ce produit du panier ?')) {
                        form.submit();
                    }
                });
            });

            // Animation pour les boutons de quantité
            const quantityForms = document.querySelectorAll('form[asp-page-handler="UpdateQuantity"]');
            quantityForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const button = e.submitter;
                    if (button) {
                        const originalHTML = button.innerHTML;
                        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                        button.disabled = true;

                        setTimeout(() => {
                            button.innerHTML = originalHTML;
                            button.disabled = false;
                        }, 500);
                    }
                });
            });

            // Mettre à jour le compteur du panier dans le header
            function updateCartCount() {
                fetch('/Cart/Index?handler=CartCount')
                    .then(response => response.json())
                    .then(data => {
                        if (data && data.count !== undefined) {
                            const cartBadge = document.querySelector('.cart-count');
                            if (cartBadge) {
                                cartBadge.textContent = data.count;
                                cartBadge.style.display = data.count > 0 ? 'inline' : 'none';
                            }
                        }
                    })
                    .catch(error => console.error('Erreur:', error));
            }

            // Mettre à jour après les actions
            updateCartCount();
        });
    </script>
}