    <script>
        // Variables globales
        let chatSessionId = '@Guid.NewGuid().ToString()';
        let isChatProcessing = false;
        let currentRecommendedProducts = [];
        let unreadMessages = 0; // Pour suivre les messages non lus

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            initializeChatAssistant();
            initializeCartBadge();
            initializeBackToTop();
            setupFilters();
            loadStoredRecommendations();
            loadChatHistory();
        });

        // 1. Initialisation du chat assistant améliorée
        function initializeChatAssistant() {
            const trigger = document.getElementById('aiAssistantTrigger');
            const panel = document.getElementById('aiAssistantPanel');
            const closeBtn = document.getElementById('closeAssistant');
            const clearBtn = document.getElementById('clearChatBtn');
            const input = document.getElementById('assistantInput');
            const sendBtn = document.getElementById('sendButton');
            const chatArea = document.getElementById('assistantChat');
            const notificationBadge = document.getElementById('notificationBadge');

            // Ouvrir/Fermer le panneau
            function toggleChatPanel() {
                const isOpen = panel.classList.contains('open');
                panel.classList.toggle('open', !isOpen);
                trigger.classList.toggle('active', !isOpen);

                if (!isOpen) {
                    input.focus();
                    // Réinitialiser les notifications quand on ouvre
                    unreadMessages = 0;
                    updateNotificationBadge();
                    // Scroll vers le bas
                    setTimeout(() => {
                        chatArea.scrollTop = chatArea.scrollHeight;
                    }, 100);
                } else {
                    // Ajouter une notification quand on ferme et qu'il y a de l'activité
                    if (chatArea.querySelectorAll('.chat-message').length > 0) {
                        unreadMessages = 1;
                        updateNotificationBadge();
                    }
                }
            }

            trigger.addEventListener('click', toggleChatPanel);
            closeBtn.addEventListener('click', toggleChatPanel);

            // Bouton vider la conversation
            clearBtn.addEventListener('click', function() {
                if (confirm('Voulez-vous vraiment effacer toute la conversation ? Cette action est irréversible.')) {
                    clearChatHistory();
                }
            });

            // Auto-resize textarea avec limite
            input.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 100) + 'px';

                // Limiter à 500 caractères
                if (this.value.length > 500) {
                    this.value = this.value.substring(0, 500);
                    showNotification('Message limité à 500 caractères', 'warning');
                }
            });

            // Envoyer message avec Entrée (Ctrl+Enter pour nouvelle ligne)
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendAssistantMessage();
                }
            });

            // Désactiver bouton si input vide
            input.addEventListener('input', function() {
                sendBtn.disabled = this.value.trim().length === 0 || isChatProcessing;
            });
        }

        // 2. Mettre à jour le badge de notification
        function updateNotificationBadge() {
            const badge = document.getElementById('notificationBadge');
            if (badge) {
                if (unreadMessages > 0) {
                    badge.textContent = unreadMessages > 9 ? '9+' : unreadMessages;
                    badge.style.display = 'flex';
                    badge.style.animation = 'pulse 1.5s infinite';
                } else {
                    badge.style.display = 'none';
                }
            }
        }

        // 3. Envoyer un message à l'assistant
        async function sendAssistantMessage(message = null) {
            const input = document.getElementById('assistantInput');
            const messageText = message || input.value.trim();

            if (!messageText || isChatProcessing) return;

            // Désactiver l'input
            input.disabled = true;
            document.getElementById('sendButton').disabled = true;
            isChatProcessing = true;

            // Ajouter le message utilisateur
            addChatMessage(messageText, 'user');
            if (!message) input.value = '';
            input.style.height = 'auto';

            // Afficher indicateur de chargement
            showTypingIndicator();

            try {
                // Appeler l'API RAG
                const response = await fetch('/api/rag/ask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        question: messageText,
                        sessionId: chatSessionId,
                        timestamp: new Date().toISOString()
                    })
                });

                if (!response.ok) {
                    throw new Error(`Erreur HTTP: ${response.status}`);
                }

                const data = await response.json();
                removeTypingIndicator();

                // Ajouter la réponse (avec messageId si présent)
                const aiMessageId = data.messageId || null;
                addChatMessage(data.response || data.message || "Je n'ai pas pu générer de réponse.", 'ai', aiMessageId);

                // Gérer les produits recommandés (attacher au message spécifique)
                if (data.recommendedProducts && Array.isArray(data.recommendedProducts) && data.recommendedProducts.length > 0) {
                    currentRecommendedProducts = data.recommendedProducts;
                    displayRecommendedProductsInChat(data.recommendedProducts, aiMessageId);
                    displayRecommendedProductsInPage(data.recommendedProducts, messageText);
                }

                // Sauvegarder l'historique avec les produits (inclut messageId)
                saveChatToLocalStorage({
                    user: messageText,
                    ai: data.response,
                    messageId: aiMessageId,
                    products: data.recommendedProducts || [],
                    timestamp: new Date().toISOString()
                });

            } catch (error) {
                console.error('Erreur assistant:', error);
                removeTypingIndicator();
                addChatMessage('Désolé, une erreur est survenue. Veuillez réessayer.', 'ai');

                // Sauvegarder quand même l'erreur
                saveChatToLocalStorage({
                    user: messageText,
                    ai: 'Désolé, une erreur est survenue. Veuillez réessayer.',
                    products: [],
                    timestamp: new Date().toISOString()
                });
            } finally {
                // Réactiver l'input
                input.disabled = false;
                document.getElementById('sendButton').disabled = input.value.trim().length === 0;
                isChatProcessing = false;
                input.focus();
            }
        }

        // 4. Ajouter un message au chat avec style amélioré
        function addChatMessage(text, sender, messageId) {
            const chatArea = document.getElementById('assistantChat');

            // Supprimer le message de bienvenue seulement si c'est le premier message réel
            const welcomeMsg = chatArea.querySelector('.welcome-message');
            const existingMessages = chatArea.querySelectorAll('.chat-message').length;

            if (welcomeMsg && existingMessages === 0) {
                welcomeMsg.remove();

                // Ajouter un message d'information
                const infoMsg = document.createElement('div');
                infoMsg.className = 'info-message fade-in';
                infoMsg.innerHTML = `
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>Astuce :</strong> Cliquez sur les produits pour voir leurs détails.
                        Vous pouvez aussi faire un clic droit pour ouvrir dans un nouvel onglet.
                    </div>
                `;
                chatArea.appendChild(infoMsg);
            }

            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message ${sender}-message`;
            if (messageId) {
                messageDiv.dataset.messageId = messageId;
            }

            const bubble = document.createElement('div');
            bubble.className = 'message-bubble';
            bubble.textContent = text;

            const time = document.createElement('div');
            time.className = 'message-time';
            time.textContent = formatTime(new Date());

            messageDiv.appendChild(bubble);
            messageDiv.appendChild(time);
            chatArea.appendChild(messageDiv);

            // Scroll vers le bas
            setTimeout(() => {
                chatArea.scrollTop = chatArea.scrollHeight;
            }, 50);
        }

        // 5. Afficher les produits recommandés dans le chat avec style amélioré
        function displayRecommendedProductsInChat(products, messageId) {
            const chatArea = document.getElementById('assistantChat');

            // Si un messageId est fourni, rattacher les cartes à ce message précis
            let targetMessage = null;
            if (messageId) {
                targetMessage = chatArea.querySelector(`.chat-message.ai-message[data-message-id="${messageId}"]`);
            }

            // Sinon, fallback sur le dernier message IA
            if (!targetMessage) {
                const aiMessages = Array.from(chatArea.querySelectorAll('.ai-message'));
                targetMessage = aiMessages[aiMessages.length - 1];
            }

            if (!targetMessage) return;

            // Créer la section produits
            const productsSection = document.createElement('div');
            productsSection.className = 'recommended-products fade-in';

            const title = document.createElement('div');
            title.className = 'section-title';
            title.innerHTML = '<i class="fas fa-star"></i> Recommandations';
            productsSection.appendChild(title);

            // Conteneur scrollable pour les produits
            const productsContainer = document.createElement('div');
            productsContainer.className = 'products-scroll-container';
            // Style inline pour le scroll si plus de 6 produits
            if (products.length > 6) {
                productsContainer.style.maxHeight = '400px';
                productsContainer.style.overflowY = 'auto';
                productsContainer.style.overflowX = 'hidden';
                productsContainer.style.paddingRight = '4px';
            }

            // Ajouter jusqu'à 10 produits (au lieu de 3)
            products.slice(0, 10).forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card-mini';
                productCard.dataset.productId = product.id;
                productCard.style.cursor = 'pointer';

                // Gestionnaire de clic
                productCard.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const pid = this.dataset.productId;
                    if (pid) {
                        navigateToProductDetail(pid);
                    }
                });

                // Gestionnaire pour clic droit (nouvel onglet)
                productCard.addEventListener('contextmenu', function(e) {
                    e.preventDefault();
                    const pid = this.dataset.productId;
                    if (pid) {
                        openProductInNewTab(pid);
                    }
                    return false;
                });

                productCard.innerHTML = `
                    <img src="${product.imageUrl || '/images/placeholder.jpg'}"
                         alt="${product.name}"
                         onerror="this.src='/images/placeholder.jpg'">
                    <div class="product-info-mini">
                        <div class="product-name-mini">${product.name}</div>
                        <div class="product-meta">
                            <div class="product-price-mini">${formatPrice(product.price)}</div>
                            ${product.rating ?
                                `<div class="product-rating-mini">${generateStarRating(product.rating)}</div>` :
                                ''
                            }
                        </div>
                        ${product.brand ? `<div class="product-brand">${product.brand}</div>` : ''}
                    </div>
                    <div class="product-external">
                        <i class="fas fa-external-link-alt"></i>
                    </div>
                `;

                // Effet au survol
                productCard.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(-2px)';
                    this.style.boxShadow = '0 4px 12px rgba(90, 75, 214, 0.1)';
                });

                productCard.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                    this.style.boxShadow = 'none';
                });

                productsContainer.appendChild(productCard);
            });

            productsSection.appendChild(productsContainer);

            // Bouton "Voir tous" seulement s'il y a plus de 10 produits
            if (products.length > 10) {
                const viewAllBtn = document.createElement('button');
                viewAllBtn.className = 'btn btn-sm btn-outline-primary w-100 mt-2';
                viewAllBtn.style.fontSize = '12px';
                viewAllBtn.style.padding = '6px 12px';
                viewAllBtn.innerHTML = `<i class="fas fa-eye me-1"></i> Voir tous les ${products.length} produits`;
                viewAllBtn.onclick = function() {
                    // Stocker les produits globalement
                    currentRecommendedProducts = products;
                    // Afficher dans la page
                    displayRecommendedProductsInPage(products, 'recommandations');
                    // Fermer le chat si mobile
                    if (window.innerWidth <= 768) {
                        closeChatPanel();
                    }
                };
                productsSection.appendChild(viewAllBtn);
            }

            targetMessage.appendChild(productsSection);

            // Scroll vers le bas
            setTimeout(() => {
                chatArea.scrollTop = chatArea.scrollHeight;
            }, 100);
        }

        // 6. Afficher les produits recommandés dans la page
        function displayRecommendedProductsInPage(products, query) {
            // Vérifier si on est sur la page des produits
            if (!isProductsPage()) {
                // Rediriger vers la page produits avec les filtres
                sessionStorage.setItem('aiRecommendedProducts', JSON.stringify(products));
                sessionStorage.setItem('aiRecommendationQuery', query);
                window.location.href = '/Products/Index?aiRecommendation=true';
                return;
            }

            // Supprimer les filtres IA existants
            removeExistingAIFilter();

            // Ajouter le filtre IA
            const filtersContainer = document.querySelector('.filters-container, .filter-section, .card-body, .row:first-child');
            if (filtersContainer) {
                const aiFilter = document.createElement('div');
                aiFilter.className = 'ai-recommendation-filter fade-in';
                aiFilter.innerHTML = `
                    <div class="ai-filter-label">
                        <i class="fas fa-robot"></i>
                        <span>Recommandations IA pour "${truncateText(query, 40)}"</span>
                        <span class="badge bg-light text-dark ms-2">${products.length} produits</span>
                    </div>
                    <button class="ai-filter-remove" onclick="removeAIFilter()" title="Supprimer le filtre">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                filtersContainer.prepend(aiFilter);
            }

            // Filtrer les produits
            filterProductsByRecommendations(products.map(p => p.id));

            // Ajouter les écouteurs d'événements aux produits
            setTimeout(() => {
                attachProductClickListeners(products);
            }, 100);
        }

        // 7. Filtrer les produits par recommandations
        function filterProductsByRecommendations(productIds) {
            const productElements = document.querySelectorAll('.product-card, .product-item, [data-product-id]');

            productElements.forEach(element => {
                const productId = element.dataset.productId ||
                                 element.querySelector('[data-product-id]')?.dataset.productId;

                if (productId && productIds.includes(productId)) {
                    element.style.display = 'block';
                    element.style.border = '2px solid #5a4bd6';
                    element.style.borderRadius = '8px';
                    element.classList.add('product-highlight');

                    // Ajouter un badge cliquable
                    if (!element.querySelector('.ai-recommended-badge')) {
                        const badge = document.createElement('div');
                        badge.className = 'ai-recommended-badge';
                        badge.innerHTML = '<i class="fas fa-robot me-1"></i> IA Recommandé';
                        badge.onclick = function(e) {
                            e.stopPropagation();
                            navigateToProductDetail(productId);
                        };
                        element.style.position = 'relative';
                        element.appendChild(badge);
                    }
                } else {
                    element.style.display = 'none';
                }
            });

            // Mettre à jour le compteur
            updateProductCount(productIds.length);
        }

        // 8. Attacher les écouteurs de clic aux produits
        function attachProductClickListeners(products) {
            const productElements = document.querySelectorAll('.product-card, .product-item, [data-product-id]');

            productElements.forEach(element => {
                const productId = element.dataset.productId ||
                                 element.querySelector('[data-product-id]')?.dataset.productId;

                if (productId) {
                    // Trouver le produit correspondant
                    const product = products.find(p => p.id === productId);
                    if (product) {
                        element.style.cursor = 'pointer';

                        element.addEventListener('click', function(e) {
                            if (!e.target.closest('.btn') && !e.target.closest('.ai-recommended-badge')) {
                                navigateToProductDetail(productId);
                            }
                        });

                        // Ajouter un tooltip
                        element.title = `Cliquez pour voir les détails de ${product.name}`;
                    }
                }
            });
        }

        // 9. Supprimer le filtre IA
        function removeAIFilter() {
            // Supprimer le badge de filtre
            const aiFilter = document.querySelector('.ai-recommendation-filter');
            if (aiFilter) aiFilter.remove();

            // Réafficher tous les produits
            const productElements = document.querySelectorAll('.product-card, .product-item, [data-product-id]');
            productElements.forEach(element => {
                element.style.display = 'block';
                element.style.border = '';
                element.classList.remove('product-highlight');

                // Supprimer les badges IA
                const badge = element.querySelector('.ai-recommended-badge');
                if (badge) badge.remove();

                // Réinitialiser le curseur
                element.style.cursor = '';
                element.title = '';
            });

            // Réinitialiser le compteur
            const allProducts = document.querySelectorAll('.product-card, .product-item, [data-product-id]');
            updateProductCount(allProducts.length);
        }

        // 10. Fonctions utilitaires
        function showTypingIndicator() {
            const chatArea = document.getElementById('assistantChat');
            const indicator = document.createElement('div');
            indicator.className = 'chat-message ai-message typing-indicator-message';
            indicator.innerHTML = `
                <div class="message-bubble">
                    <div class="typing-indicator">
                        <span style="margin-right: 8px; color: var(--assistant-muted); font-size: 12px;">En train d'écrire...</span>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    </div>
                </div>
            `;
            indicator.id = 'typingIndicator';
            chatArea.appendChild(indicator);
            chatArea.scrollTop = chatArea.scrollHeight;
        }

        function removeTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) indicator.remove();
        }

        function updateProductCount(count) {
            const countElement = document.querySelector('.product-count, .results-count');
            if (countElement) {
                countElement.textContent = `${count} produits`;
            }
        }

        function closeChatPanel() {
            const panel = document.getElementById('aiAssistantPanel');
            const trigger = document.getElementById('aiAssistantTrigger');
            if (panel) panel.classList.remove('open');
            if (trigger) trigger.classList.remove('active');
        }

        function removeExistingAIFilter() {
            const existingFilter = document.querySelector('.ai-recommendation-filter');
            if (existingFilter) existingFilter.remove();
        }

        // 11. Navigation produit
        function navigateToProductDetail(productId) {
            if (!productId) {
                console.error('Product ID is missing');
                return;
            }

            // Construction de l'URL selon votre routage
            const productUrl = `/Products/Details/${productId}`;

            // Fermer le panneau assistant sur mobile
            if (window.innerWidth <= 768) {
                closeChatPanel();
            }

            // Redirection vers la page produit
            window.location.href = productUrl;
        }

        function openProductInNewTab(productId) {
            if (!productId) return;
            const productUrl = `/Products/Details/${productId}`;
            window.open(productUrl, '_blank');
        }

        // 12. Fonctions de formatage
        function formatPrice(price) {
            if (typeof price === 'number') {
                return price.toFixed(2).replace('.', ',') + ' €';
            }
            return '0,00 €';
        }

        function generateStarRating(rating) {
            const fullStars = Math.floor(rating);
            const hasHalfStar = rating % 1 >= 0.5;
            let stars = '★'.repeat(fullStars);
            if (hasHalfStar) stars += '½';
            const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
            stars += '☆'.repeat(emptyStars);
            return stars + ' ' + rating.toFixed(1);
        }

        function truncateText(text, maxLength) {
            if (!text) return '';
            if (text.length <= maxLength) return text;
            return text.substring(0, maxLength) + '...';
        }

        function formatTime(date) {
            return date.toLocaleTimeString('fr-FR', {
                hour: '2-digit',
                minute: '2-digit',
                hour12: false
            });
        }

        function isProductsPage() {
            return window.location.pathname.includes('/Products/Index');
        }

        // 13. Notification système
        function showNotification(message, type = 'info') {
            // Vous pouvez implémenter un système de notifications si besoin
            console.log(`[${type.toUpperCase()}] ${message}`);
        }

        // 14. Gestion du panier
        function initializeCartBadge() {
            function updateCartBadge() {
                try {
                    const cookieValue = document.cookie
                        .split('; ')
                        .find(row => row.startsWith('ECOM_CART='))
                        ?.split('=')[1];

                    if (cookieValue) {
                        const decoded = decodeURIComponent(cookieValue);
                        const cartData = JSON.parse(decoded);
                        const count = cartData?.Items?.reduce((sum, item) => sum + (item.Quantity || 0), 0) || 0;

                        const badge = document.getElementById('cartBadge');
                        if (badge) {
                            badge.textContent = count;
                            badge.style.display = count > 0 ? 'flex' : 'none';
                        }
                    }
                } catch (error) {
                    console.error('Erreur lecture cookie panier:', error);
                }
            }

            // Vérifier périodiquement
            setInterval(updateCartBadge, 1000);
            updateCartBadge();
        }

        // 15. Back to top
        function initializeBackToTop() {
            const backToTop = document.querySelector('.back-to-top');
            if (backToTop) {
                window.addEventListener('scroll', function() {
                    if (window.scrollY > 300) {
                        backToTop.style.opacity = '1';
                        backToTop.style.visibility = 'visible';
                    } else {
                        backToTop.style.opacity = '0';
                        backToTop.style.visibility = 'hidden';
                    }
                });
            }
        }

        // 16. Gestion des filtres existants
        function setupFilters() {
            const searchForm = document.querySelector('form[asp-page="/Products/Index"]');
            if (searchForm) {
                searchForm.addEventListener('submit', handleSearch);
            }
        }

        function handleSearch(event) {
            event.preventDefault();
            const form = event.target;
            const searchTerm = form.querySelector('input[name="searchTerm"]').value;
            const category = form.querySelector('select[name="category"]').value;

            let url = '/Products/Index';
            const params = new URLSearchParams();

            if (searchTerm) params.append('searchTerm', searchTerm);
            if (category) params.append('category', category);

            if (params.toString()) {
                url += '?' + params.toString();
            }

            window.location.href = url;
        }

        // 17. Charger les recommandations stockées
        function loadStoredRecommendations() {
            if (isProductsPage() && window.location.search.includes('aiRecommendation=true')) {
                const storedProducts = sessionStorage.getItem('aiRecommendedProducts');
                const storedQuery = sessionStorage.getItem('aiRecommendationQuery');

                if (storedProducts && storedQuery) {
                    const products = JSON.parse(storedProducts);
                    displayRecommendedProductsInPage(products, storedQuery);

                    // Nettoyer le sessionStorage
                    sessionStorage.removeItem('aiRecommendedProducts');
                    sessionStorage.removeItem('aiRecommendationQuery');
                }
            }
        }

        // 18. Stockage local du chat
        function saveChatToLocalStorage(message) {
            try {
                const history = JSON.parse(localStorage.getItem('chatHistory') || '[]');
                history.push(message);

                // Garder seulement les 100 derniers messages
                if (history.length > 100) {
                    history.splice(0, history.length - 100);
                }

                localStorage.setItem('chatHistory', JSON.stringify(history));
            } catch (error) {
                console.error('Erreur sauvegarde historique:', error);
            }
        }

        function loadChatHistory() {
            try {
                const history = JSON.parse(localStorage.getItem('chatHistory') || '[]');
                const chatArea = document.getElementById('assistantChat');

                // Ne charger l'historique que si le chat est vide (pas de messages)
                const existingMessages = chatArea.querySelectorAll('.chat-message').length;

                if (existingMessages === 0 && history.length > 0) {
                    // Vider seulement le message de bienvenue
                    const welcomeMsg = chatArea.querySelector('.welcome-message');
                    if (welcomeMsg) welcomeMsg.remove();

                    // Ajouter un message d'information
                    const infoMsg = document.createElement('div');
                    infoMsg.className = 'info-message fade-in';
                    infoMsg.innerHTML = `
                        <i class="fas fa-history"></i>
                        <div>
                            <strong>Conversation précédente restaurée</strong><br>
                            Vous pouvez continuer là où vous vous étiez arrêté.
                        </div>
                    `;
                    chatArea.appendChild(infoMsg);

                    // Charger tout l'historique
                    history.forEach(msg => {
                        if (msg.user) addChatMessage(msg.user, 'user');
                        if (msg.ai) {
                            // Rétablir le message IA avec son messageId s'il existe
                            addChatMessage(msg.ai, 'ai', msg.messageId || null);

                            // Reconstruire les produits recommandés après un délai
                            if (msg.products && Array.isArray(msg.products) && msg.products.length > 0) {
                                setTimeout(() => {
                                    displayRecommendedProductsInChat(msg.products, msg.messageId || null);
                                }, 100);
                            }
                        }
                    });
                }

            } catch (error) {
                console.error('Erreur chargement historique:', error);
            }
        }

        // 19. Fonction pour vider le chat
        function clearChatHistory() {
            localStorage.removeItem('chatHistory');
            const chatArea = document.getElementById('assistantChat');
            chatArea.innerHTML = '';

            // Réafficher le message de bienvenue
            const welcomeMsg = document.createElement('div');
            welcomeMsg.className = 'welcome-message';
            welcomeMsg.innerHTML = `
                <i class="fas fa-robot"></i>
                <h3>Bonjour ! 👋</h3>
                <p>Je suis votre assistant virtuel E-Shop. Je peux vous aider à trouver les produits parfaits selon vos besoins.</p>

                <div class="welcome-features">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Recherche intelligente par critères</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Comparaison de produits</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Recommandations personnalisées</span>
                    </div>
                </div>
            `;
            chatArea.appendChild(welcomeMsg);

            // Supprimer le filtre IA s'il existe
            removeAIFilter();

            // Notification de confirmation
            showNotification('Conversation effacée avec succès', 'success');

            // Scroll vers le haut
            chatArea.scrollTop = 0;
        }

        // Exposer les fonctions globalement
        window.sendAssistantMessage = sendAssistantMessage;
        window.removeAIFilter = removeAIFilter;
        window.navigateToProductDetail = navigateToProductDetail;
        window.openProductInNewTab = openProductInNewTab;
        window.clearChatHistory = clearChatHistory;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>